extends ../layout

append stylesheets
  style
    #dashboard {
      width: 70px;
      background-color: rgb(110,138,195);
      padding: 20px 20px 0 20px;
      position: absolute;
      left: -92px;
      z-index: 100;
    }
    #dashboard img {
      margin-bottom: 20px;
      border: 1px solid rgb(0,0,0);
    }

append scripts
  script(src='/_js/jquery-1.8.2.min.js')
  script(src='/_js/jquery.easing.1.3.js')
  script(src='/_js/jquery.color.js')
  script
    $(document).ready(function() {
      $('#dashboard').hover(
        function() {
          $(this).stop().animate(
            {
              left: 0,
              backgroundColor: 'rgb(255, 255, 255)'
            },
            500,
            'easeInSine'
          ); //end animate
        },
        function() {
          $(this).stop().animate(
            {
              left: '-92px',
              backgroundColor: 'rgb(110, 138, 195)'
            },
            1500,
            'easeOutBounce'
          ); //end animate
        }
      ); //end hover
    }); // end ready

block content
  div#dashboard
    img(src='/_images/small/blue_h.jpg', width='70', height='70', alt='blue')
    img(src="/_images/small/green_h.jpg", width="70", height="70", alt="green")
    img(src="/_images/small/orange_h.jpg", width="70", height="70", alt="orange")
    img(src="/_images/small/purple_h.jpg", width="70", height="70", alt="purple")
    img(src="../_images/small/red_h.jpg", width="70", height="70", alt="red")
    img(src="../_images/small/yellow_h.jpg", width="70", height="70", alt="yellow")
  div.content
    div.main
      h1= title
      p Mouse over the blue stripe on the left edge of this page