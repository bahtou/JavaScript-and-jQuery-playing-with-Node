extends ../layout

append stylesheets
  link(href='/_js/fancybox/jquery.fancybox-1.3.4.css', rel='stylesheet')

append scripts
  script(src='/_js/jquery-1.8.2.min.js')
  script(src='/_js/jquery.easing.1.3.js')
  script(src='/_js/fancybox/jquery.fancybox-1.3.4.min.js')
  script
    $(document).ready(function() {
      $('#gallery a').fancybox({
        overlayColor: '#060',
        overlayOpacity: .3,
        padding: 10,
        transitionIn: 'elastic',
        transitionOut: 'elastic',
        easingIn: 'easeInSine',
        easingOut: 'easeOutSine',
        titlePosition: 'over',
        cyclic: true
      }); //end fancybox
    }); //end ready

block content
  div.content
    div.main
      h1= title
      div#gallery
        a(href="/_images/large/slide1.jpg", rel='gallery', title='Lotsa golf balls')
          img(src="/_images/small/slide1.jpg", width="70", height="70", alt="golf balls")
        a(href="/_images/large/slide2.jpg", rel='gallery', title='the wall')
          img(src="/_images/small/slide2.jpg", width="70", height="70", alt="rock wall")
        a(href="/_images/large/slide3.jpg", rel='gallery', title='moat')
          img(src="/_images/small/slide3.jpg", width="70", height="70", alt="old course")
        a(href="/_images/large/slide4.jpg", rel='gallery', title='tees')
          img(src="/_images/small/slide4.jpg", width="70", height="70", alt="tees")
        a(href="/_images/large/slide5.jpg", rel='gallery', title='trees and greens')
          img(src="/_images/small/slide5.jpg", width="70", height="70", alt="tree")
        a(href="/_images/large/slide6.jpg", rel='gallery', title='old men')
          img(src="/_images/small/slide6.jpg", width="70", height="70", alt="ocean course")