extends ../layout

append stylesheets
  link(href='/_js/fancybox/jquery.fancybox-1.3.4.css', rel='stylesheet')

append scripts
  script(src='/_js/jquery-1.8.2.min.js')
  script(src='/_js/fancybox/jquery.fancybox-1.3.4.min.js')
  script
    $(document).ready(function() {
      $('ul a').attr('class', 'iframe');
      $('.iframe').fancybox({
        width: '90%',
        height: '90%',
        titlePosition: 'outside'
      }); //end fancybox
    }); //end ready

block content
  div.content
    div.main
      h1= title
      ul
        li
          a(href='http://www.smashingmagazine.com/', title='Smashing') Smashing Magazine
        li
          a(href="http://www.oreilly.com/", title="O'Reilly") O'Reilly.com
        li
          a(href="http://www.cosmofarmer.com/", title='CosmoFarmer') CosmoFarmer.com
        li
          a(href="http://www.nationalexasperator.com/", title='Exasperator') The National Exasperator
        li
          a(href="http://www.chia-vet.com/", title='Chia') Chia-vet

      p *Some sites don't allow you to put their web pages inside an iframe, like
        | Google and Yahoo! You can read more about why and how they do this at 
        a(href="https://developer.mozilla.org/en/The_X-FRAME-OPTIONS_response_header") https://developer.mozilla.org/en/The_X-FRAME-OPTIONS_response_header