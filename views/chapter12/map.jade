extends ../layout

append stylesheets
  style
    #map{
      height: 400px;
      width: 760px;
    }
    #map h2 {
      color: black;
      text-shadow : none;
    }
    #map p {
      color: black; 
    }

append scripts
  script(src='http://maps.google.com/maps/api/js?sensor=false')
  script(src='/_js/jquery-1.8.2.min.js')
  script(src='/_js/jquery.gomap-1.3.2.min.js')
  script
    $(document).ready(function() {
      $('#map').goMap({
        latitude : 45.53940,
        longitude : -122.59025,zoom : 16,
        scaleControl : true,
        maptype : 'SATELLITE'
      }); //end goMap

      $.goMap.createMarker({  
         latitude : 45.53743,
         longitude :  -122.59473,
         title : 'hole1',
         html : {
           content : '<h2>Hole 1</h2><p>Par 4, 346 Yards</p>',
           popup : true   
           }
      }); // end createMarker
    }); //end ready

block content
  .content
    .main
      h1= title
      #map