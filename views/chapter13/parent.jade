extends ../layout

append stylesheets
  style
    #gallery a {
      display: inline-block;
      width: 80px;
      height: 80px;
      margin: 10px;
    }
    #gallery img {
      border: none; 
    }

append scripts
  script(src='/_js/jquery-1.8.2.min.js')
  script
    $(document).ready(function() {
      $('#gallery a').hover(
        function() {
          // add outline to link
          $(this).css('outline', '2px solid red');
          // add background color to div
          $(this).parent().css('backgroundColor', 'rgb(110, 138, 195)');
        },
        function() {
          // remove outline from link
          $(this).css('outline', '');
          // remove background color from div
          $(this).parent().css('backgroundColor', '');
        }
      ); //end hover
    }); //end ready

