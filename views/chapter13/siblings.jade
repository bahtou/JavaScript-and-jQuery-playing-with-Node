append stylesheets
  style
    #gallery a {
      display: inline-block;
      margin: 10px;
      position: relative; 
    }

append scripts
  script(src='/_js/jquery-1.8.2.min.js')
  script
    $(document).ready(function() {
      $('#gallery a').click(function() {
       $(this).siblings('a').fadeTo(500,.3)
                  .animate({left:'-=20px'},200)
                  .animate({left:'+=20px'},250) 
                  .fadeTo(250,1);
      }); // end click
    }); // end ready

